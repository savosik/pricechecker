{
    "manifest_version": 3,
    "name": "MP Parser Worker",
    "version": "1.0.0",
    "description": "DOM parser worker for marketplace price parsing",
    "permissions": [
        "storage",
        "alarms",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "*://*.ozon.ru/*",
        "*://*.ozon.by/*",
        "*://*.wildberries.ru/*",
        "*://*.wildberries.by/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.ozon.ru/*",
                "*://*.ozon.by/*",
                "*://*.wildberries.ru/*",
                "*://*.wildberries.by/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}